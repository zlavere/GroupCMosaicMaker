<Page
    x:Class="ImageSandbox.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageSandbox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="653.5" Width="792.5">

    <Grid Margin="0,0,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Image x:Name="imageDisplay" HorizontalAlignment="Center" Height="429" VerticalAlignment="Center" Width="684"/>
        <AppBarButton x:Name="openImageButton" HorizontalAlignment="Left" Icon="BrowsePhotos" Label="Open" Margin="10,10,0,0" VerticalAlignment="Top" Height="76" Click="loadButton_Click"/>
        <AppBarButton x:Name="saveMosaicButton" HorizontalAlignment="Left" Icon="SaveLocal" Label="Save Mosaic" Margin="78,10,0,0" VerticalAlignment="Top" Click="saveButton_Click"/>
        <AppBarButton x:Name="settingsButton" HorizontalAlignment="Left" Icon="Setting" Label="Settings" Margin="151,10,0,0" VerticalAlignment="Top" Height="76"/>


    </Grid>
</Page>
